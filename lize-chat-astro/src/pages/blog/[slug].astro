---
import Layout from '../../layouts/Layout.astro';
import ChatMessage from '../../components/ChatMessage.astro';
import { getCollection, getEntry } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import MarkdownIt from 'markdown-it';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;

// 安全地获取内容
let content = '';
try {
  // 在 Astro 中，post.body 应该包含原始 Markdown 内容
  if (post.body) {
    content = String(post.body);
  }
} catch (e) {
  // 如果获取失败，尝试使用 render
  try {
    const rendered = await post.render();
    // 如果无法获取原始内容，至少确保不会崩溃
    content = '';
  } catch (renderError) {
    console.error('Error reading post content:', renderError);
    content = '';
  }
}

// 初始化 Markdown 渲染器
const md = new MarkdownIt({
  html: true,
  linkify: true,
  typographer: true,
});

// 解析内容，将对话分离为消息
const messages: Array<{ speaker: 'guest' | 'host'; name?: string; content: string; renderedContent: string }> = [];

if (!content || content.trim().length === 0) {
  // 如果内容为空，显示提示
  messages.push({
    speaker: 'guest',
    name: post.data.guest || '作者',
    content: '内容加载中...',
    renderedContent: '<p>内容加载中...</p>',
  });
} else {
  // 尝试解析对话格式
  const sections = content.split(/^##\s+/gm).filter(s => s.trim());
  let currentSpeaker: 'guest' | 'host' | null = null;
  let currentName: string | undefined = undefined;
  let currentContent: string[] = [];

  sections.forEach((section) => {
    const lines = section.split('\n');
    const header = lines[0].trim();
    
    if (header.toLowerCase().startsWith('guest:') || header.toLowerCase().startsWith('嘉宾:')) {
      // 保存之前的消息
      if (currentSpeaker && currentContent.length > 0) {
        const contentText = currentContent.join('\n').trim();
        messages.push({
          speaker: currentSpeaker,
          name: currentName,
          content: contentText,
          renderedContent: md.render(contentText),
        });
      }
      currentSpeaker = 'guest';
      currentName = header.replace(/^(guest|嘉宾):\s*/i, '').trim() || undefined;
      currentContent = lines.slice(1);
    } else if (header.toLowerCase().startsWith('host:') || header.toLowerCase().startsWith('丽泽:') || header.toLowerCase().startsWith('主持人:')) {
      // 保存之前的消息
      if (currentSpeaker && currentContent.length > 0) {
        const contentText = currentContent.join('\n').trim();
        messages.push({
          speaker: currentSpeaker,
          name: currentName,
          content: contentText,
          renderedContent: md.render(contentText),
        });
      }
      currentSpeaker = 'host';
      currentName = header.replace(/^(host|丽泽|主持人):\s*/i, '').trim() || undefined;
      currentContent = lines.slice(1);
    } else if (currentSpeaker) {
      // 继续当前消息的内容
      currentContent.push(...lines);
    }
  });

  // 保存最后一条消息
  if (currentSpeaker && currentContent.length > 0) {
    const contentText = currentContent.join('\n').trim();
    messages.push({
      speaker: currentSpeaker,
      name: currentName,
      content: contentText,
      renderedContent: md.render(contentText),
    });
  }

  // 如果没有解析到对话格式，直接渲染整个内容
  if (messages.length === 0) {
    messages.push({
      speaker: 'guest',
      name: post.data.guest || '作者',
      content: content,
      renderedContent: md.render(content),
    });
  }
}
---

<Layout title={post.data.title} description={post.data.description}>
  <article class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-dark-gray mb-4">
        {post.data.title}
      </h1>
      {post.data.description && (
        <p class="text-xl text-gray-600 mb-4">
          {post.data.description}
        </p>
      )}
      <time class="text-sm text-gray-500">
        {(() => {
          try {
            return new Intl.DateTimeFormat('zh-CN', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            }).format(post.data.pubDate);
          } catch (e) {
            return post.data.pubDate ? String(post.data.pubDate) : '';
          }
        })()}
      </time>
    </header>

    <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
      {messages.map((message, index) => (
        <ChatMessage
          speaker={message.speaker}
          name={message.name || (message.speaker === 'guest' ? (post.data.guest || '作者') : (post.data.host || '丽泽'))}
          content={message.renderedContent}
        />
      ))}
    </div>

    {post.data.slideUrl && (
      <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
        <h2 class="text-2xl font-semibold text-dark-gray mb-4">演示文稿</h2>
        <div class="aspect-video bg-gray-100 rounded-lg flex items-center justify-center">
          <iframe
            src={post.data.slideUrl}
            class="w-full h-full rounded-lg"
            frameborder="0"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    )}
  </article>
</Layout>
