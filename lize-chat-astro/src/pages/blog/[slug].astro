---
import Layout from '../../layouts/Layout.astro';
import ChatMessage from '../../components/ChatMessage.astro';
import { getCollection, getEntry } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import MarkdownIt from 'markdown-it';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

// 解析内容，将对话分离为消息
// 假设 Markdown 格式为：
// ## Guest: [名称]
// 内容
// 
// ## Host: [名称]
// 内容

const content = post.body;
const messages: Array<{ speaker: 'guest' | 'host'; name?: string; content: string }> = [];

// 按 ## 分割内容
const sections = content.split(/^##\s+/gm).filter(s => s.trim());
let currentSpeaker: 'guest' | 'host' | null = null;
let currentName: string | undefined = undefined;
let currentContent: string[] = [];

sections.forEach((section) => {
  const lines = section.split('\n');
  const header = lines[0].trim();
  
  if (header.toLowerCase().startsWith('guest:')) {
    // 保存之前的消息
    if (currentSpeaker && currentContent.length > 0) {
      messages.push({
        speaker: currentSpeaker,
        name: currentName,
        content: currentContent.join('\n').trim(),
      });
    }
    currentSpeaker = 'guest';
    currentName = header.replace(/^guest:\s*/i, '').trim() || undefined;
    currentContent = lines.slice(1);
  } else if (header.toLowerCase().startsWith('host:')) {
    // 保存之前的消息
    if (currentSpeaker && currentContent.length > 0) {
      messages.push({
        speaker: currentSpeaker,
        name: currentName,
        content: currentContent.join('\n').trim(),
      });
    }
    currentSpeaker = 'host';
    currentName = header.replace(/^host:\s*/i, '').trim() || undefined;
    currentContent = lines.slice(1);
  } else if (currentSpeaker) {
    // 继续当前消息的内容
    currentContent.push(...lines);
  }
});

// 保存最后一条消息
if (currentSpeaker && currentContent.length > 0) {
  messages.push({
    speaker: currentSpeaker,
    name: currentName,
    content: currentContent.join('\n').trim(),
  });
}

// 如果没有解析到消息，使用默认格式显示整个内容
if (messages.length === 0) {
  messages.push({
    speaker: 'guest',
    name: post.data.guest,
    content: content,
  });
}

// 为每条消息渲染 Markdown
const md = new MarkdownIt({
  html: true,
  linkify: true,
  typographer: true,
});

const renderedMessages = messages.map(msg => ({
  ...msg,
  renderedContent: md.render(msg.content),
}));
---

<Layout title={post.data.title} description={post.data.description}>
  <article class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-dark-gray mb-4">
        {post.data.title}
      </h1>
      {post.data.description && (
        <p class="text-xl text-gray-600 mb-4">
          {post.data.description}
        </p>
      )}
      <time class="text-sm text-gray-500">
        {new Intl.DateTimeFormat('zh-CN', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        }).format(post.data.pubDate)}
      </time>
    </header>

    <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
      {renderedMessages.map((message, index) => (
        <ChatMessage
          speaker={message.speaker}
          name={message.name || (message.speaker === 'guest' ? post.data.guest : post.data.host)}
          content={message.renderedContent}
        />
      ))}
    </div>

    {post.data.slideUrl && (
      <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
        <h2 class="text-2xl font-semibold text-dark-gray mb-4">演示文稿</h2>
        <div class="aspect-video bg-gray-100 rounded-lg flex items-center justify-center">
          <iframe
            src={post.data.slideUrl}
            class="w-full h-full rounded-lg"
            frameborder="0"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    )}
  </article>
</Layout>
