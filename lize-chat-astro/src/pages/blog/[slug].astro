---
import Layout from '../../layouts/Layout.astro';
import ChatMessage from '../../components/ChatMessage.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog');
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;

// 渲染文章内容
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
  <article class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-dark-gray mb-4">
        {post.data.title}
      </h1>
      {post.data.description && (
        <p class="text-xl text-gray-600 mb-4">
          {post.data.description}
        </p>
      )}
      <time class="text-sm text-gray-500">
        {(() => {
          try {
            const date = post.data.pubDate instanceof Date ? post.data.pubDate : new Date(post.data.pubDate);
            return new Intl.DateTimeFormat('zh-CN', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            }).format(date);
          } catch (e) {
            return String(post.data.pubDate || '');
          }
        })()}
      </time>
    </header>

    <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
      <div class="prose prose-lg max-w-none">
        <Content />
      </div>
    </div>

    {post.data.slideUrl && (
      <div class="bg-white rounded-lg shadow-sm p-8 mb-8">
        <h2 class="text-2xl font-semibold text-dark-gray mb-4">演示文稿</h2>
        <div class="aspect-video bg-gray-100 rounded-lg flex items-center justify-center">
          <iframe
            src={post.data.slideUrl}
            class="w-full h-full rounded-lg"
            frameborder="0"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    )}
  </article>
</Layout>
