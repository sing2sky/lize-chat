---
import Layout from '../../layouts/Layout.astro';
import ChatMessage from '../../components/ChatMessage.astro';
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import MarkdownIt from 'markdown-it';

export async function getStaticPaths() {
  const dialogues = await getCollection('dialogue');
  return dialogues.map((dialogue) => ({
    params: { slug: dialogue.slug },
    props: { dialogue },
  }));
}

interface Props {
  dialogue: CollectionEntry<'dialogue'>;
}

const { dialogue } = Astro.props;
const { Content } = await dialogue.render();

// 解析内容，将对话分离为消息
const content = dialogue.body;
const messages: Array<{ speaker: 'guest' | 'host'; name?: string; content: string }> = [];

// 按 ## 分割内容
const sections = content.split(/^##\s+/gm).filter(s => s.trim());
let currentSpeaker: 'guest' | 'host' | null = null;
let currentName: string | undefined = undefined;
let currentContent: string[] = [];

sections.forEach((section) => {
  const lines = section.split('\n');
  const header = lines[0].trim();
  
  if (header.toLowerCase().startsWith('guest:') || header.toLowerCase().startsWith('嘉宾:')) {
    // 保存之前的消息
    if (currentSpeaker && currentContent.length > 0) {
      messages.push({
        speaker: currentSpeaker,
        name: currentName,
        content: currentContent.join('\n').trim(),
      });
    }
    currentSpeaker = 'guest';
    currentName = header.replace(/^(guest|嘉宾):\s*/i, '').trim() || undefined;
    currentContent = lines.slice(1);
  } else if (header.toLowerCase().startsWith('host:') || header.toLowerCase().startsWith('丽泽:') || header.toLowerCase().startsWith('主持人:')) {
    // 保存之前的消息
    if (currentSpeaker && currentContent.length > 0) {
      messages.push({
        speaker: currentSpeaker,
        name: currentName,
        content: currentContent.join('\n').trim(),
      });
    }
    currentSpeaker = 'host';
    currentName = header.replace(/^(host|丽泽|主持人):\s*/i, '').trim() || undefined;
    currentContent = lines.slice(1);
  } else if (currentSpeaker) {
    // 继续当前消息的内容
    currentContent.push(...lines);
  }
});

// 保存最后一条消息
if (currentSpeaker && currentContent.length > 0) {
  messages.push({
    speaker: currentSpeaker,
    name: currentName,
    content: currentContent.join('\n').trim(),
  });
}

// 如果没有解析到消息，使用默认格式显示整个内容
if (messages.length === 0) {
  const participants = dialogue.data.participants || [];
  messages.push({
    speaker: 'guest',
    name: participants[0],
    content: content,
  });
}

// 为每条消息渲染 Markdown
const md = new MarkdownIt({
  html: true,
  linkify: true,
  typographer: true,
});

const renderedMessages = messages.map(msg => ({
  ...msg,
  renderedContent: md.render(msg.content),
}));
---

<Layout title={dialogue.data.title} description={dialogue.data.summary}>
  <article class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-12 text-center border-b border-gray-100 pb-8">
      <h1 class="text-4xl font-serif font-semibold text-text-dark mb-4">
        {dialogue.data.title}
      </h1>
      {dialogue.data.summary && (
        <p class="text-lg text-gray-600 mb-4 max-w-3xl mx-auto">
          {dialogue.data.summary}
        </p>
      )}
      <div class="flex items-center justify-center gap-4 text-sm text-gray-500">
        <time>
          {new Intl.DateTimeFormat('zh-CN', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          }).format(dialogue.data.date)}
        </time>
        {dialogue.data.participants && dialogue.data.participants.length > 0 && (
          <span>•</span>
        )}
        {dialogue.data.participants && dialogue.data.participants.length > 0 && (
          <span>参与者：{dialogue.data.participants.join('、')}</span>
        )}
      </div>
      {dialogue.data.tags && dialogue.data.tags.length > 0 && (
        <div class="flex gap-2 justify-center mt-4 flex-wrap">
          {dialogue.data.tags.map((tag) => (
            <span class="px-3 py-1 text-xs bg-bg-light text-cyan rounded-full border border-gray-200">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>

    <div class="bg-white mb-8">
      {renderedMessages.map((message, index) => (
        <ChatMessage
          speaker={message.speaker}
          name={message.name || (message.speaker === 'guest' ? dialogue.data.participants?.[0] : '丽泽')}
          content={message.renderedContent}
        />
      ))}
    </div>

    {dialogue.data.slideUrl && (
      <div class="bg-white rounded-lg border border-gray-100 p-8 mb-8">
        <h2 class="text-2xl font-serif font-semibold text-text-dark mb-4">演示文稿</h2>
        <div class="aspect-video bg-gray-50 rounded-lg flex items-center justify-center border border-gray-100">
          <iframe
            src={dialogue.data.slideUrl}
            class="w-full h-full rounded-lg"
            frameborder="0"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    )}
  </article>
</Layout>
