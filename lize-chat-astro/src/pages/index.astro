---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ConversationCard from '../components/ConversationCard.astro';
import { getCollection } from 'astro:content';

// 获取 dialogue 集合
let allDialogues: any[] = [];
try {
  allDialogues = await getCollection('dialogue');
} catch (e) {
  // 如果 dialogue 集合不存在，忽略
}

// 获取 blog 集合（兼容旧内容）
let allBlogPosts: any[] = [];
try {
  allBlogPosts = await getCollection('blog', ({ data }) => {
    return import.meta.env.PROD ? data.draft !== true : true;
  });
} catch (e) {
  // 如果 blog 集合不存在，忽略
}

// 合并并排序所有内容
const allPosts = [
  ...allDialogues.map(post => ({
    ...post,
    date: post.data.date,
    collection: 'dialogue' as const,
  })),
  ...allBlogPosts.map(post => ({
    ...post,
    date: post.data.pubDate,
    collection: 'blog' as const,
  })),
].sort((a, b) => b.date.getTime() - a.date.getTime());
---

<Layout title="首页" description="丽泽讲会：思想的流转与碰撞">
  <Hero />
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    {allPosts.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {allPosts.map((post) => (
          <ConversationCard
            title={post.data.title}
            summary={post.data.summary || post.data.description}
            date={post.date}
            slug={post.slug}
            tags={post.data.tags}
            collection={post.collection}
          />
        ))}
      </div>
    ) : (
      <div class="text-center py-12">
        <p class="text-gray-600">暂无对话内容，敬请期待...</p>
      </div>
    )}
  </div>
</Layout>
